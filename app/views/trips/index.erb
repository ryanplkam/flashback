<div class='trip-page'>
<%= erb :'partials/_navbar' %>
<div class='container below-navbar'>
  <div class='row'>
    <div class='col-lg-12'>
      <div class='row'>
        <div class='col-lg-6 col-md-6 col-sm-6 trip-details'>
          <h2>
            <%= @trip.title %>
            <br>
            <small>
            <%= @trip.location %>
            <br>
            <%= Date::MONTHNAMES[@trip.start_date.month] + " " + @trip.start_date.day.to_s + ", " + @trip.start_date.year.to_s %>
            <% if @trip.end_date %> - 
              <%= Date::MONTHNAMES[@trip.end_date.month] + " " + @trip.end_date.day.to_s + ", " + @trip.end_date.year.to_s %>
            <% end %>
            <br>
            <span class='label label-success'>10 people like this</span>
            </small>
          </h2>
        </div>
        <div class='col-lg-6 col-md-6 col-sm-6'>
          <div class='edit-trip-btns pull-right'>
            <a class='btn btn-primary edit-trip-btn' href="./<%= @trip.id %>/photos">
            View Photos</a>
            <a class='btn btn-primary edit-trip-btn' href="./<%= @trip.id %>/update">
            Edit
            </a>
            <a class='btn btn-danger edit-trip-btn' href="./<%= @trip.id %>/delete">
            Delete
            </a>
          </div>
        </div>
      </div>
    </div>
    <div class='col-lg-12 trip-description'>
      <p>
        <%= @trip.description %>
      </p>
    </div>
    <div class='col-lg-12 vertical-timeline'>
      <section id="cd-timeline" class="cd-container">
        <% @trip.activities.each do |activity| %>
        <div class="cd-timeline-block">
          <div class="cd-timeline-img cd-picture">
            <span class='glyphicon glyphicon-home'></span>
          </div>
          <!-- cd-timeline-img -->
          <div class="cd-timeline-content">
            <h2><%= activity.title %></h2>
            <p><%= activity.description %> </p>
            <a href="./<%= @trip.id %>/activities/<%= activity.id %>" class="cd-read-more">View</a>
            <span class="cd-date">
            <%= Date::MONTHNAMES[activity.start_date.month] + " " + activity.start_date.day.to_s + ", " + activity.start_date.year.to_s %>
            </span>
          </div>
          <!-- cd-timeline-content -->
        </div>
        <!-- cd-timeline-block -->
        <% end %>
        <!-- New trip button -->
        <div class="cd-timeline-block new-activity-block">
          <a href="./<%= @trip.id %>/activities/new">
            <div class="cd-timeline-img cd-picture new-activity">
              <span class='glyphicon glyphicon-plus'>
              </span>
            </div>
          </a>
          <div class="cd-timeline-content">
            <h2>New Activity</h2>
          </div>
          <!-- </a> -->
        </div>
      </section>
      <!-- cd-timeline -->
    </div>
  </div>
</div>