<div class='update-profile-page profile-page'>
  <%= erb :'partials/_navbar' %>
  <div class='container below-navbar'>
    <%= erb :'partials/_user_profile' %>
    <div class="col-lg-8 col-lg-offset-4">
      <form class="form-horizontal" action="/users/<%=session[:user]%>" method="post">

        <div class="form-group">
          <label class="control-label">About me:</label>
          <textarea name="about_me" class='form-control about-me'><%= @user.about_me %></textarea>
        </div>

        <div class="form-group">
          <label class="control-label">Quirky fact:</label>
          <textarea name="quirky_fact" class='form-control quirk-fact'><%= @user.quirky_fact %></textarea>
        </div>

        <div class="form-group">
          <input class="btn btn-success" type="submit" value="SAVE">
          <a class="btn btn-default" href="/users/<%=session[:user]%>/profile">CANCEL</a>
        </div>
      </form>
    </div>
  </div>
</div>
