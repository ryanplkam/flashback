<div class='update-profile-page profile-page'>
  <%= erb :'partials/_navbar' %>
  <div class='container below-navbar'>
    <%= erb :'partials/_user_profile' %>
    <div class='row'>
      <div class="col-lg-8 col-lg-offset-4">
        <form class="form-horizontal" action="/users/<%=params[:user_id]%>" method="post">
          <div class="form-group">
            <label class="control-label">About me:</label>
            <textarea rows='6' name="about_me" class='form-control about-me'><%= @user.about_me %></textarea>
          </div>
          <div class="form-group">
            <label class="control-label">Quirky fact:</label>
            <textarea rows='3' name="quirky_fact" class='form-control quirk-fact'><%= @user.quirky_fact %></textarea>
          </div>
          <div class="form-group">
            <input class="btn btn-success save-button" type="submit" value="Save">
            <a class="btn btn-default" href="/users/<%=session[:user]%>/profile">Cancel</a>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
