<% @login_user = User.find(session[:user]) if user_login?%>
<nav class="navbar navbar-default navbar-fixed-top">
  <div class="container">
    <div class='row'>
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        </button>
        <div class='col-lg-4 col-md-4 col-sm-4 col-xs-4'>
          <% if user_login? %>
            <a class="navbar-brand" href="/users/<%=@login_user.id%>/trips">Flashback</a>
          <% else %>
            <a class="navbar-brand" href="/">Flashback</a>
          <% end %>
        </div>
      </div>
      <div id='navbar' class='navbar-collapse collapse'>
        <div class="col-lg-3 col-lg-offset-3 col-md-3 col-md-offset-3 col-sm-4 col-sm-offset-2">
          <form class="navbar-form" role="search">
            <div class="input-group">
              <input type="text" class="form-control" placeholder="Search users" name="q">
              <div class="input-group-btn">
                <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
              </div>
            </div>
          </form>
        </div>
        <ul class="nav navbar-nav navbar-right">
          <% if user_login? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle logged-in" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
            <img class="user-icon" src="<%= @login_user.photo %>" alt="">
            <span class="caret"></span></a>
            <ul class="dropdown-menu">
              <li><a href="/users/<%= @login_user.id %>/profile">Profile</a></li>
              <li><a href="/users/<%= @login_user.id %>/friends">Friends</a></li>
              <li><a href="/users/<%= @login_user.id %>/trips">Trips</a></li>
              <li><a href="/logout">Logout</a></li>
            </ul>
          </li>
          <% else %>
          <li class="dropdown">
            <a href="http://www.jquery2dotnet.com" class="dropdown-toggle" data-toggle="dropdown">Sign in <b class="caret"></b></a>
            <ul class="dropdown-menu" style="padding: 15px;min-width: 150px;">
              <li>
                <a class="btn btn-primary btn-block" type="button" id="sign-in-facebook" href="/auth/facebook">
                <img src='/images/icon-facebook.svg'>
                </a>
                <a class="btn btn-primary btn-block" type="button" id="sign-in-google" href="#">
                <img src='/images/google-plus-icon.png'>
                </a>
              </li>
            </ul>
          </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</nav>
