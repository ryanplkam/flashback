<form action="<%= url %>" method="post">
  <div class="form-group">
    <label for="title">Title </label>
    <input class="form-control" type="text" name="title" placeholder="make a title for your trip" value="<%= @trip.title if @trip %>">
  </div>

  <div class="form-group">
    <label for="author">Start Date  </label>
    <input class="form-control" type="text" name="author" placeholder="when did the trip start" value="<%= @trip.start_date if @trip %>">
  </div>

  <div class="form-group">
    <label for="url">End Date</label>
    <input class="form-control" type="text" name="url" placeholder="when did the trip end" value="<%= @trip.end_date if @trip %>">
  </div>

  <div class="form-group">
    <label for="url">Location</label>
    <input class="form-control" type="text" name="url" placeholder="where did you go" value="<%= @trip.location if @trip %>">
  </div>

  <div class="form-group">
    <label for="description">Trip description</label>
    <textarea class="form-control" name="description"><% if @trip %>@trip.description<% else %>write something about your trip<% end %></textarea>
  </div>

  <div class="form-group">
    <% if @trip %>
      <% @trip.errors.full_messages.each do |message| %>
        <%= message%> <br/>
      <% end %>
    <% end %>
  </div>

  <div class="form-group">
    <input class="btn btn-success" type="submit" value="SAVE">
    <a class="btn btn-default" href="/users/<%=session[:user]%>/trips">CANCEL</a>
  </div>
</form>
