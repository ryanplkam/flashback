<div class='row'>
  <form action="<%= urls %>" method="post">
    <div class='col-lg-12'>
      <div class="form-group">
        <label for="title">Title </label>
        <input class="form-control" type="text" name="title" placeholder="Name your trip!" value="<%= @trip.title if @trip %>">
      </div>
    </div>

    <div class='col-lg-6'>
      <div class="form-group">
        <label for="start_date">Start Date  </label>
        <input type="text" class="form-control datepicker" placeholder='When did it start?' name="start_date" value="<%= @trip.start_date if @trip %>">
      </div>
    </div>

    <div class='col-lg-6'>
      <div class="form-group">
        <label for="end_date">End Date  </label>
        <input type="text" class="form-control datepicker" placeholder="When did it finish?" name="end_date" value="<%= @trip.end_date if @trip %>">
      </div>
    </div>

    <div class='col-lg-12'>
      <div class="form-group">
        <label for="location">Location</label>
        <input class="form-control" type="text" name="location" placeholder="Where'd you go?" value="<%= @trip.location if @trip %>">
      </div>
    </div>
    <div class='col-lg-12'>
      <div class="form-group">
        <label for="description">Trip description</label>
        <% if @trip %>
        <textarea class="form-control" name="description"><%=@trip.description%></textarea>
        <% else %>
        <textarea class="form-control" name="description" placeholder='And that, kids, is how I met your mother.'></textarea>
        <% end %>
      </div>
    </div>
    <div class='col-lg-12'>
      <div class="form-group">
        <% if @trip %>
        <% @trip.errors.full_messages.each do |message| %>
        <%= message%> <br/>
        <% end %>
        <% end %>
      </div>
    </div>
    <div class='col-lg-12'>
      <div class="form-group">
        <input class="btn btn-success" type="submit" value="Save">
        <a class="btn btn-default" href="/users/<%=session[:user]%>/trips">Cancel</a>
      </div>
    </div>
  </form>
</div>

<script>$('.datepicker').datepicker({
  format: "yyyy-mm-dd"
});</script>