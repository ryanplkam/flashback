<div class="container" style="padding-top: 30px;">
  <div class="row">
    <!-- left column -->
    <div class="col-md-4 col-sm-6 col-xs-12">
      <div class="text-center">
        <img src="<%=@user.photo%>" class="avatar img-circle img-thumbnail" alt="avatar">
      </div>
    </div>
    <!-- edit form column -->
    <div class="col-md-8 col-sm-6 col-xs-12 personal-info">
      <% if user_login? %>
        <% if session[:user].to_s == params[:user_id] %>
          <a class='btn btn-primary edit-trip-btn pull-right' href="update">Update</a>
        <% elsif Friendship.find_by(user_id: session[:user], friend_id: params[:user_id]) %>
          <form action="/users/<%=params[:user_id]%>/delete" method="post">
            <input type="submit" class='btn btn-primary edit-trip-btn pull-right' value="Unfriend">
          </form>
        <% else %>
          <form action="/users/<%=params[:user_id]%>/add" method="post">
            <input type="submit" class='btn btn-primary edit-trip-btn pull-right' value="Add Friend">
          </form>
        <% end %>
      <% end %>
      <h3>Personal info</h3>
    </div>
    <div class="col-md-8 col-sm-6 col-xs-12 personal-info">
      <form class="form-horizontal" role="form">
        <div class="form-group">
          <label class="control-label">Name</label>
          <p><%= @user.name %></p>
        </div>
        <div class="form-group">
          <label class="control-label">Date of birth:</label>
          <p><%= @user.birthday %></p>
        </div>
           <div class="form-group">
          <label class="control-label">Location:</label>
          <p><%= @user.location %></p>
        </div>
        <div class="form-group">
          <label class="control-label">Email:</label>
          <p><%= @user.email %></p>
        </div>
      </form>
    </div>
  </div>
</div>
