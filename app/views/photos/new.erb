<div class='new-trip-page'>
  <%= erb :'partials/_navbar' %>
  <div class="below-navbar container">
    <div class="row">
      <div class="col-lg-6 col-lg-offset-3">
        <h1>Upload Pictures</h1>
          <form class="form-horizontal" action="/users/<%=params[:user_id]%>/trips/<%=params[:trip_id]%>/activities/<%=params[:activity_id]%>/photos" method="post" enctype="multipart/form-data">
            <div class="form-group">
              <input name="photos[]" type="file" multiple>
            </div>
            <div class="form-group">
              <input class="btn btn-success" type="submit" value="Upload">
              <a class='btn btn-default' href='./../../<%= @activity.id %>'>Cancel</a>
            </div>
          </form>
      </div>
    </div>
  </div>
</div>

